@model IEnumerable<WebAppCookBook.Frontend.Models.RecipeViewModel>

<!DOCTYPE html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<html>
<head>
	<title>Test</title>
</head>
<body>
	<div class="container">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			@foreach (var item in Model)
			{
				<a asp-action="Details" asp-controller="Recipes" asp-route-recipeId="@item.Id">
					<div class="col">
						<div class="card mb-4 h-100">
							<img src="https://localhost:7027/images/@item.Id/@item.Image" class="card-img-top" alt="...">
							<div class="card-body">
								<div class="container text-center">
									<div class="row align-items-center">
										<div class="col-sm">
											<h5 class="card-title">@item.Name</h5>
										</div>
										<div class="col-sm">
											@if (@item.CategoryId != 1)
											{
												<p class="card-text">@item.Category?.NameCategory</p>
											}
											else
											{
												<p class="card-text">#БЕЗ КАТЕГОРИИ</p>
											}

										</div>
									</div>
								</div>
							</div>							
						</div>
					</div>
				</a>
			}
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
</body>
</html>